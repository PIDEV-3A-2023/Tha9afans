{% extends 'base.html.twig' %}

{% block title %}PaymentS index{% endblock %}

{% block body %}
    <h1>PaymentS index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CardNumber</th>
                <th>CardHolder</th>
                <th>Date</th>
                <th>Cvv</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.cardNumber }}</td>
                <td>{{ payment.cardHolder }}</td>
                <td>{{ payment.date ? payment.date|date('Y-m-d') : '' }}</td>
                <td>{{ payment.cvv }}</td>
                <td>
                    <a href="{{ path('app_payment_s_show', {'id': payment.id}) }}">show</a>
                    <a href="{{ path('app_payment_s_edit', {'id': payment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_payment_s_new_panierproduit') }}">Create new</a>
{% endblock %}
