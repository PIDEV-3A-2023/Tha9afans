{% extends 'base.html.twig' %}

{% block title %}Personnes{% endblock %}

{% block body %}
    <h1>Personnes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ personne.id }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ personne.cin }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ personne.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ personne.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ personne.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ personne.password }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ personne.role }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ personne.telephone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ personne.adresse }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    {% if personne.photo is not empty %}
                        <img src="{{ path('personne_show', {'id': personne.id}) }}" alt="{{ personne.nom }}" width="100">
                    {% else %}
                        Aucune photo disponible
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Datenaissance</th>
                <td>{{ personne.datenaissance ? personne.datenaissance|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_personnes_index') }}">back to list</a>

    <a href="{{ path('app_personnes_edit', {'id': personne.id}) }}">edit</a>

    {{ include('personnes/_delete_form.html.twig') }}
{% endblock %}
