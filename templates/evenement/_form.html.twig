{% block javascripts %}
    <script>
        $(document).ready(function() {
            var linkField = $('#{{ form.link.vars.id }}');
            var onlineField = $('#{{ form.online.vars.id }}');

            // Hide the link field if the event is offline
            if (!onlineField.val()) {
                linkField.hide();
            }

            // Show/hide the link field when the online field value changes
            onlineField.change(function() {
                if (onlineField.val()) {
                    linkField.show();
                } else {
                    linkField.hide();
                }
            });
        });     
    </script>
