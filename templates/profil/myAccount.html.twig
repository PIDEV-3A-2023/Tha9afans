{% extends '/profil/index.html.twig' %}
{% block cardtitle %}Mon compte{% endblock %}
{% block content %}
    <form>
        <h6 class="heading-small text-muted mb-4">User information</h6>
        <div class="pl-lg-4">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group focused">
                        <label class="form-control-label" for="input-username">Cin</label>
                        <input type="text" id="input-username" class="form-control form-control-alternative" placeholder="Username" value="{{ app.user.cin }}">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label" for="input-email">Adresse Email</label>
                        <input type="email" id="input-email" class="form-control form-control-alternative" placeholder="{{ app.user.email }}">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group focused">
                        <label class="form-control-label" for="input-first-name">Nom</label>
                        <input type="text" id="input-first-name" class="form-control form-control-alternative" placeholder="Nom" value="{{ app.user.nom }}">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group focused">
                        <label class="form-control-label" for="input-last-name">Prenom</label>
                        <input type="text" id="input-last-name" class="form-control form-control-alternative" placeholder="Prénom" value="{{ app.user.prenom }}">
                    </div>
                </div>
            </div>
        </div>
        <hr class="my-4">
        <!-- Address -->
        <h6 class="heading-small text-muted mb-4">Contact</h6>
        <div class="pl-lg-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group focused">
                        <label class="form-control-label" for="input-address">Addresse</label>
                        <input id="input-address" class="form-control form-control-alternative" placeholder="Adresse" value="{{ app.user.cin }}">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group focused">
                        <label class="form-control-label" for="input-address">Numero de téléphone</label>
                        <input id="input-address" class="form-control form-control-alternative" placeholder="Numéro de téléphone" value="{{ app.user.telephone }}" type="text">
                    </div>
                </div>
            </div>
        </div>
        <hr class="my-4">
    </form>
{% endblock %}