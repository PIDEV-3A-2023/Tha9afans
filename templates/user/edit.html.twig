{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <style>

        .box{
            box-sizing: border-box;
            width: 510px;
            height: 890px;
            border: 2px solid #A8DADC;
            box-shadow: -3px -3px 7px #ffffff73,
            3px 3px 5px rgba(94,104,121,0.288);
            border-radius: 5px;
            background-color: #001A23;
            margin-top: 15px;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            margin-left: 550px;
        }
        .form-control-file.custom-class {
            margin-left: 70px;
            margin-right: auto;
        }
        .my-custom-class {
            display: inline-block;
            margin-right: 10px;
        }
        .imgprofile{
            box-sizing: border-box;
            width: 135px;
            height: 135px;
            border-radius: 50%;
            margin: 0;
            margin-left: 170px;
            border: 5px solid #A8DADC;
            padding: 3px;
            background-color: white;
        }


        .form-control{
            display: block;
            box-sizing: border-box;
            background: none;
            background-color: white !important;
            color:white;
            margin-bottom: 30px;
            padding: 4px;
            width: 220px;
            height: 32px;
            border: none;
            border-bottom: 1px solid #A8DADC;
            font-family: 'Roboto', sans-serif;
            font-weight: 400;
            font-size: 15px;
            transition: 0.2s ease;
        }
        .form-control:focus{
            border-bottom: 2px solid #A8DADC;
            border-bottom-right-radius: 20px;
            color: #A8DADC;
            transition: 0.2s ease;
        }
        .btn{
            border: 1px solid #A8DADC;
            background-color: white;
            color: #001A23;
            height: 50px;
            width: 100px;
            border-radius: 20px;
            margin: 0px;
            transition: all 0.3s;
            font-size: 18px;
            font-weight: bold;
            margin-left: 170px;
        }
        .btn:hover{
            transform: scale(1.1);
            background: #A8DADC
        ;
            color:#001A23 ;
            box-shadow: 0 0 35px #A8DADC;
        }
        file-input{
            box-sizing: border-box;
            font-size: 20px;
            background-color: #001A23;
            border: 1px solid #A8DADC;
            padding: 2px 15px;
            border-radius: 5px;
            transition: all 0.3s;
            margin-top: -200px;
        }
        file-input:hover{
            background-color: #A8DADC;
            color: black;
        }
        .form-control{}
        .box:hover{
            width: 530px;
            height: 890px;
            border-radius: 5px;
        }
        input{
            background: none;
            background-color: white !important;
            color:#001A23;
            margin-bottom: 20px;
            padding: 4px;
            width: 220px;
            height: 30px;
            border: none;
            border-bottom: 1px solid #A8DADC;
            font-family: 'Roboto', sans-serif;
            font-weight: 250;
            font-size: 15px;
            transition: 0.2s ease;
        }
        input:focus{
            border-bottom: 2px solid #A8DADC;
            border-bottom-right-radius: 20px;
            color: #A8DADC;
            transition: 0.2s ease;
        }

        </style>

    <div class="box">
        <br>
        <h3 style="margin-left: 105px">Modifier Utilisateur</h3>
        <img class="imgprofile" src="{{ path('user_show', {'id': user.id}) }}" alt="{{ user.nom }}">
        {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}
        {{ include('user/_delete_form.html.twig') }}

    </div>
    x

    <a href="{{ path('app_user_index') }}">back to list</a>


{% endblock %}
