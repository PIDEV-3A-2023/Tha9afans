{% extends 'backBase.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
    <style>

        .box{
            box-sizing: border-box;
            width: 700px;
            height: auto;
            border: 2px solid #A8DADC;
            box-shadow: -3px -3px 7px #ffffff73,
            3px 3px 5px rgba(94,104,121,0.288);
            border-radius: 5px;
            background-color: #001A23;
            margin-top: 15px;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            margin-left: 250px;
        }
        label{margin-left: 10px}
        .form-control-file.custom-class {
            margin-left: 70px;
            margin-right: auto;
        }
        .my-custom-class {
            display: inline-block;
            margin-right: 10px;
        }
        .imgprofile{
            box-sizing: border-box;
            width: 135px;
            height: 135px;
            border-radius: 50%;
            margin: 0;
            margin-left: 170px;
            border: 5px solid #A8DADC;
            padding: 3px;
            background-color: white;
        }


        .form-control{
            display: block;
            box-sizing: border-box;
            background: none;
            background-color: white !important;
            color:black;
            margin-bottom: 30px;
            padding: 4px;
            width: 220px;
            height: 32px;
            border: none;
            border-bottom: 1px solid #A8DADC;
            font-family: 'Roboto', sans-serif;
            font-weight: 400;
            font-size: 15px;
            transition: 0.2s ease;
        }
        .form-control:focus{
            border-bottom: 2px solid #A8DADC;
            border-bottom-right-radius: 20px;
            color: black;
            transition: 0.2s ease;
        }
        .btn{
            border: 1px solid #A8DADC;
            background-color: white;
            color: #001A23;
            height: 50px;
            width: 150px;
            border-radius: 20px;
            margin: 0px;
            transition: all 0.3s;
            font-size: 22px;
            font-weight: bold;
            margin-left: 220px;
            margin-bottom: 20px;
        }
        .btn:hover{
            transform: scale(1.1);
            background: #A8DADC
        ;
            color:#001A23 ;
            box-shadow: 0 0 35px #A8DADC;
        }

        file-input{
            box-sizing: border-box;
            font-size: 20px;
            border: 1px solid #A8DADC;
            padding: 2px 15px;
            border-radius: 5px;
            color: black;
            transition: all 0.3s;
            margin-top: -200px;
        }
        file-input:hover{
            background-color: #A8DADC;
            color: black;
        }
        .form-control{}
        .box:hover{
            width: 700px;
            height: auto;
            border-radius: 5px;
        }
        input{
            background: none;
            background-color: white !important;
            color:#001A23;
            margin-bottom: 20px;
            padding: 4px;
            width: 220px;
            height: 30px;
            border: none;
            margin-left: 10px;
            border-bottom: 1px solid #A8DADC;
            font-family: 'Roboto', sans-serif;
            font-weight: 250;
            font-size: 15px;
            transition: 0.2s ease;
        }

        .custom-class{
            color: white;
        }
        .form-check input{
            color: red;
        }

    </style>
    <div class="box">
        <h3 style="margin-left: 140px">Ajouter un nouveau utilisateur</h3>

        {% include 'user/_form.html.twig' with {'form': form, 'button_label': 'Ajouter', 'hide_password': false} %}
    </div>


    <a href="{{ path('app_user_index') }}">back to list</a>
{% endblock %}
