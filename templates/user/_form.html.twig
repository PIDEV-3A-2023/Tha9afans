{{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
<div class="row">
    <div class="col">
        {{ form_row(form.cin, {
            label: 'Carte identit√©'
        }, {'attr': {'class': 'form-control-file custom-class text-center'}}) }}
    </div>
    <div class="col">
        {{ form_row(form.nom, {'attr': {'class': 'form-control-file custom-class text-center'}}) }}
    </div>
</div>
<div class="row">
    <div class="col">
        {{ form_row(form.prenom, {'attr': {'class': 'form-control-file custom-class text-center'}}) }}
    </div>
    <div class="col">
        {{ form_row(form.email, {'attr': {'class': 'form-control-file custom-class text-center'}}) }}
    </div>
</div>
<div class="row">
    <div class="col">
        {{ form_row(form.telephone, {'attr': {'class': 'form-control-file custom-class text-center'}}) }}
    </div>
    <div class="col">
        {{ form_row(form.adresse, {'attr': {'class': 'form-control-file custom-class text-center'}}) }}
    </div>
</div>
<div class="row">
    <div class="col">
        {% if not hide_password %}
            {{ form_row(form.plainPassword, {
                label: 'Password'
            }, {'attr': {'class': 'form-control-file custom-class text-center'}}) }}
        {% endif %}
    </div>
</div>
<div class="row">
    <div class="col">
        {{ form_row(form.datenaissance,  {
            label: 'Date de naissance'
        },{'attr': {'class': 'form-control-file custom-class text-center'}}) }}
    </div>
</div>
<div class="row">
    <div class="col">
        {{ form_row(form.roles, {'label_attr': {'class': 'checkbox-label', 'for': 'user_roles_0'}}) }}
    </div>
    <div class="col">
        {{ form_row(form.photo,{'attr': {'class': 'form-control-file custom-class text-center'}}) }}
    </div>
</div>
<div class="row">
    <div class="col">
        {{ form_row(form.isBlocked,{label:'Bloquer personne:'}, {'label_attr': {'class': 'checkbox-label'}}) }}
    </div>
</div>

<button class="btn" style="margin-bottom: 20px">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
