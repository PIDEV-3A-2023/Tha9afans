{% extends '/profil/index.html.twig' %}
{% block cardtitle %}Creation des Billets{% endblock %}
{% block content %}
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #ddd;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table-link {
            display: inline-block;
            padding: 6px;
            color: #007bff;
            text-decoration: none;
        }

        .table-link:hover {
            text-decoration: underline;
        }

        .table-btn {
            background-color: transparent;
            border: none;
            padding: 6px;
            cursor: pointer;
            color: #dc3545;
        }

        .table-btn:focus {
            outline: none;
        }

        .table-btn:hover {
            color: #c82333;
        }
    </style>
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <div >
        {{ include('billet/_form.html.twig') }}
    </div>
    {% if app.session.flashbag.has('warning') %}
        <div class="alert alert-danger">
            {% for message in app.session.flashbag.get('warning') %}
                {{ message }}
            {% endfor %}
        </div>
    {% endif %}
    <div>
        <table border="2px">
            <thead>
            <tr>
                <th>code</th>
                <th>type</th>
                <th>dateValidite</th>
                <th>prix</th>
                <th>nbr de billet</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for b in billets %}
                <tr>
                    <td>{{ b.code }}</td>
                    <td>{{ b.type }}</td>
                    <td>{{ b.dateValidite ? b.dateValidite|date('Y-m-d') : '' }}</td>
                    <td>{{ b.prix }}</td>
                    <td>{{ b.nbrBilletAvailable }}</td>
                    <td style="display: flex; align-items: center;">
                        <a href="{{ path('app_billet_show', {'id': b.id}) }}" class="table-link" style="color: green "><i class="fas fa-eye"></i></a>
                        <a href="{{ path('app_billet_edit', {'id': b.id}) }}" class="table-link"><i class="fas fa-edit"></i></a>
                        <form method="post" action="{{path('app-billet-delete', {'id': b.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ b.id) }}">
                            <button class="table-btn"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}