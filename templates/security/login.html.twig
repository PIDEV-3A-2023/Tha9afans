{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <style>
        .box{
            position: relative;
            width: 420px;
            height: 520px;
            background: #001A23;
            border-radius: 20px;
            overflow: hidden;
            margin: 65px auto auto auto;

        }
        .box::before
        {
            content:'';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 420px;
            height: 520px;
            background: linear-gradient(0deg,transparent,
            transparent,#45f3ff,#45f3ff,#45f3ff);
            z-index:1 ;
            transform-origin: bottom right;
            animation: animate 6s linear infinite;
        }
        .box::after
        {
            content:'';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 420px;
            height: 460px;
            background: linear-gradient(0deg,transparent,
            transparent,#45f3ff,#45f3ff,#45f3ff);
            z-index:1 ;
            transform-origin: bottom right;
            animation: animate 6s linear infinite;
            animation-delay: -3s;

        }
        .borderline{
            position: absolute;
            top: 0;
            inset: 0;
        }
        .borderline::before
        {
            content:'';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 380px;
            height: 420px;
            background: linear-gradient(0deg,transparent,
            transparent,#457B9D,#457B9D,#457B9D);
            z-index:1 ;
            transform-origin: bottom right;
            animation: animate 6s linear infinite;
            animation-delay: -1.5s;
        }
        .borderline::after
        {
            content:'';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 380px;
            height: 420px;
            background: linear-gradient(0deg,transparent,
            transparent,#457B9D,#457B9D,#457B9D);
            z-index:1 ;
            transform-origin: bottom right;
            animation: animate 6s linear infinite;
            animation-delay: -1.5s;
        }
        @keyframes animate {
            0%
            {
                transform: rotate(0deg);
            }
            100%
            {
                transform: rotate(360deg);
            }

        }
        .box form{
            position: absolute;
            inset: 4px;
            background: #001A23;
            padding: 50px 40px;
            border-radius: 8px;
            z-index: 2;
            display: flex;
            flex-direction: column;
        }
        .box form h2{
            color: #F1FAEE;
            font-weight: 400;
            text-align: center;
            letter-spacing: 0.05em;
        }
        .box form .inputBox{
            position: relative;
            width: 300px;
            margin-top: 35px;
        }
        .box form .inputBox input{
            position: relative;
            width: 100%;
            padding: 20px 10px 10px;
            background: transparent;
            outline: none;
            border:none;
            box-shadow: none;
            color: black;
            font-size: 1.0em;
            letter-spacing: 0.05em;
            transition: 0.5s;
            z-index: 10;
        }
        .box form .inputBox span{
            position: absolute;
            left: 0;
            padding: 20px 10px 10px;
            pointer-events: none;
            color: #8f8f8f;
            font-size: 1.2em;
            letter-spacing: 0.05em;
            transition: 0.5s;
        }
        .box form .inputBox input:valid ~ span,
        .box form .inputBox input:focus ~ span
        {
            color: #F1FAEE;
            font-size: 1.0em;
            transform: translateX(-10px) translateY(-34px);
        }
        .box form .inputBox i
        {
            position: absolute;
            left: 0;
            bottom: 0;
            width: 100%;
            height:2px;
            background: #fff;
            border-radius: 4px;
            overflow: hidden;
            transition: 0.5s;
            pointer-events: none;
            z-index: 9;
        }
        .box form .inputBox input:valid ~ i,
        .box form .inputBox input:focus ~ i
        {
            height: 44px;

        }
        .box form .links{
            display: flex;
            justify-content: space-between;
        }
        .box form .links a
        {
            margin: 10px 0;
            font-size: 1.0em;
            color: #8f8f8f;
            text-decoration: none;
        }
        .box form .links a:hover,
        .box form .links a:nth-child(2)
        {
            color: #457B9D;
        }
        .loginbutton
        {
            border: none;
            outline: none;
            padding:  9px 25px;
            background: #F1FAEE;
            color: #001A23;
            cursor: pointer;
            font-size: 1.2em;
            border-radius: 50px;
            font-weight: 600;
            width: 100px;
            margin-top: 10px;
            margin-left: 120px;
        }

        .loginbutton:active
        {
            opacity: 0.8;

        }
        .loginbutton:hover{
            background: var(--clr);
            color:#001A23 ;
            box-shadow: 0 0 35px var(--clr);
        }
        .loginbutton:before{
            content: '';
            position: absolute;
            inset: 2px;
            background: #27282c;
        }
        .share-buttons{
            position:absolute;
            width: 390px;
            height: 220px;
            padding-left: 135px;
            top: 50%;
            left: 50%;
            margin-left: -230px;
            margin-top: 170px;
        }
        .share-button:hover{
            cursor: pointer;
        }
        .share-button:hover .share-button-primary{
            box-shadow: 1px 0 0 0 rgba(0,0,0,0.1);
        }
        .share-button:hover .share-button-secondary-content{
            transform: translate3d(0,0,0);
        }
        .share-button-primary{
            position: absolute;
            background: #F1FAEE;
            width: 30px;
            height: 30px;
            border-radius: 15px;
            left: 0;
            top: 50%;
            margin-top: -15px;
        }
        .share-buttons .share-button{
            float: left;
            margin-top: 15px;
        }
        .share-buttons .share-button:first-child{
            margin-top: 0;
        }
        .share-buttons .share-button:after{
            clear: both;
            display: table;
        }
        .share-button{
            display: block;
            position: relative;
            height: 30px;
        }
        .share-button-icon{
            display: block;
            color: #457B9D;
            position: absolute;
            width: 30px;
            line-height: 30px;
            font-size: 29px;

        }
        .share-button-secondary{
            overflow: hidden;
            margin-left: 15px;
            height: 30px;
        }
        .share-button-secondary-content{
            font-family: sans-serif;
            font-weight: bold;
            font-size: 1em;
            background: #F1FAEE;
            display: block;
            height: 30px;
            text-align: left;
            padding-left: 24px;
            padding-right: 18px;
            line-height: 30px;
            color: #242424;
            border-radius: 0 15px 15px 0;
            transform: translate3d(-100%,0,0);
            transition: transform 175ms ease;

        }



    </style>
