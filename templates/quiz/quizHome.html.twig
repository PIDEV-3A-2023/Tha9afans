{% extends 'base.html.twig' %}

{% block title %}Quiz Home{% endblock %}

{% block body %}

    <style>
        .cardGrid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); /* Added grid property to create grid layout */
            gap: 10px; /* Added gap between cards for spacing */
            margin-top: 5%;
        }

        .card {
            background: #001A23;
            border-radius: 20px;
            padding: 10px;
            flex: 0 0 calc(20% - 20px); /* Added flex property to adjust card width to 33.33% and subtract margin */
            color: white;
            position: relative; /* Added position property for pseudo-element */
        }

        .image {

            width: 100%; /* Set image width to 100% of parent container */
            height: 100%; /* Set image height to 100% of parent container */
            /*object-fit: cover; !* Ensure image covers entire container while maintaining aspect ratio *!*/
        }

        .name {
            font-size: 25px;
            font-weight: bold;
            margin-top: 10px;
        }

        .desc {
            font-size: 15px;
            margin-top: 5px;
        }

        .nb_ques {
            font-size: 15px;
            margin-top: 5px;
        }

        .timer {
            font-size: 15px;
            margin-top: 5px;
        }

        /* Media queries for responsive font sizes */
        @media (max-width: 768px) {
            .name {
                font-size: 18px;
            }

            .desc,
            .nb_ques,
            .timer {
                font-size: 14px;
            }
        }


    </style>

    <div class="cardGrid">
        {% for quiz in quizzes %}
            <div class="card">
                {% if quiz.quizCover is not empty %}
                    <img class="image" src="{{ path('quiz_show_image', {'id': quiz.quizId}) }}" alt="{{ quiz.quizName }}">
                {% else %}
                    Aucune photo disponible
                {% endif %}
                <div class="name">
                    {{ quiz.quizName }}
                </div>
                <div class="desc">
                    {{ quiz.quizDescription }}
                </div>
                <div class="nb_ques">
                    {{ quiz.nbrQuestions }}
                </div>
                <div class="timer">
                    Timer: {{ timer[loop.index0] }}
                </div>

                <div>
                    <a href="{{ path('app_quiz_question_start', {'id': quiz.quizId}) }}">Start</a>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
