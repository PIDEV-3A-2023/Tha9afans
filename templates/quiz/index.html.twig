{% extends 'backBase.html.twig' %}

{% block title %}Quiz index{% endblock %}

{% block body %}

    <style>
        .btnn{
            /*display: block;*/
            margin-top: 10px;
            margin-bottom: auto;
            border-radius: 20px;
            color: white;
            border-color: white;
            background-color: #001A23;
        }

        btn{
            /*display: block;*/
            margin-top: 10px;
            margin-bottom: auto;
            border-radius: 20px;
            color: white;
            border-color: white;
        }
        .btn:hover {
            background-color: white;
            color: #001A23;
        }

        .btnn:hover {
            color: white;
        }
    </style>
    <h1>Quiz List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>QuizCover</th>
                <th>QuizName</th>
                <th>NbrQuestions</th>
                <th>QuizDescription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quiz in quizzes %}
            <tr>
                <td>{% if quiz.quizCover is not empty %}
                        <img src="{{ path('quiz_show_image', {'id': quiz.quizId}) }}" alt="{{ quiz.quizName }}" width="100px" height="100px">
                    {% else %}
                        Aucune photo disponible
                    {% endif %}
                </td>
                <td>{{ quiz.quizName }}</td>
                <td>{{ quiz.nbrQuestions }}</td>
                <td>{{ quiz.quizDescription }}</td>
                <td>
                    <div class="dropdown">
                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded"></i>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('app_quiz_edit', {'quizId': quiz.quizId}) }}"
                            ><i class="bx bx-edit-alt me-1"></i> Edit</a
                            >
                            <form method="post" action="{{ path('app_quiz_delete', {'quizId': quiz.quizId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.quizId) }}">
                                <button class="dropdown-item"><i class="bx bx-trash me-1"></i> Delete</button>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="container btn btnn" style="background-color: #0b1526; width: 33%" href="{{ path('app_quiz_new') }}">Create new</a>
{% endblock %}
