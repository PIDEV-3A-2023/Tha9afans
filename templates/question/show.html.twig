{% extends 'backBase.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>QuestionId</th>
                <td>{{ question.questionId }}</td>
            </tr>
            <tr>
                <th>Question</th>
                <td>{{ question.question }}</td>
            </tr>
            <tr>
                <th>Answer</th>
                <td>{{ question.answer }}</td>
            </tr>
            <tr>
                <th>Timer</th>
                <td>{{ question.timer }}</td>
            </tr>
            <tr>
                <th>FirstPossibleAnswer</th>
                <td>{{ question.firstPossibleAnswer }}</td>
            </tr>
            <tr>
                <th>SecondPossibleAnswer</th>
                <td>{{ question.secondPossibleAnswer }}</td>
            </tr>
            <tr>
                <th>ThirdPossibleAnswer</th>
                <td>{{ question.thirdPossibleAnswer }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ question.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_question_index') }}">back to list</a>

    <a href="{{ path('app_question_edit', {'questionId': question.questionId}) }}">edit</a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
