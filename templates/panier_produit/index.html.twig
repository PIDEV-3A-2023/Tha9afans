    <section class="h-100" style="background-color: #eee;">
        <div class="container h-100 py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-10">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
                        <div>
                            <p class="mb-0"><span class="text-muted">Sort by:</span> <a href="#!" class="text-body">price <i
                                            class="fas fa-angle-down mt-1"></i></a></p>
                        </div>
                    </div>
                    {% set subtotal = 0.0 %}
                    {% for panierproduit in panierproduits %}
                    <div class="card rounded-3 mb-4">
                        <div class="card-body p-4">
                            <div class="row d-flex justify-content-between align-items-center">
                                <div class="col-md-2 col-lg-2 col-xl-2">
                                    {% if panierproduit.idProduit.image is not empty %}
                                        <img  src="{{ path('produit_image_show', {'id': panierproduit.idProduit.id}) }}" alt="{{ panierproduit.idProduit.nom }} " width="100px",height="100px">
                                    {% else %}
                                        Aucune photo disponible
                                    {% endif %}
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-3">
                                    <p class="lead fw-normal mb-2">{{ panierproduit.idProduit.nom }}</p>
                                    <p>{{ panierproduit.idProduit.description }}</p>
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                    <button class="btn btn-link px-2"
                                            onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                    <a href="{{ path('app_panierproduit_updateminus',{'id':panierproduit.id}) }}"><i class="fas fa-minus"></i></a>
                                    </button>


                                    <input id="form1" type="number"  min="0" name="quantity{{ panierproduit.idProduit }}" value="{{ panierproduit.quantity }}"  class="form-control form-control-sm">
                                    <button class="btn btn-link px-2"
                                            onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                        <a href="{{ path('app_panier_produit_updateplus',{'id':panierproduit.id}) }}"><i class="fas fa-plus"></i></a>
                                    </button>
                                </div>
                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                    <h5 class="mb-0"><span>{{ panierproduit.idProduit.prix}} </span>DT</h5>
                                </div>
                                <div class="col-md-1 col-lg-1 col-xl-1 text-end">

                                    <a href="{{ path('app_panier_produit_remove',{'id':panierproduit.id}) }}" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                        {% set subtotal =subtotal + (panierproduit.quantity * panierproduit.idProduit.prix) %}
                    {% endfor %}
                    <div class="float-right text-right">
                        <h4>Subtotal:</h4>
                        <h1>{{ subtotal }} DT</h1>
                    </div>



                    <div class="card mb-4">
                        <div class="card-body p-4 d-flex flex-row">
                            <div class="form-outline flex-fill">
                                <input type="text" id="form1" class="form-control form-control-lg" />
                                <label class="form-label" for="form1">Discound code</label>
                            </div>
                            <button type="button" class="btn btn-outline-warning btn-lg ms-3">Apply</button>
                        </div>
                    </div>
                    <div class="float-right text-right">
                        <h4></h4>
                        <h1></h1>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <a href="{{ path('app_payment') }}" class="btn btn-warning btn-block btn-lg">Proceed to Pay</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>




